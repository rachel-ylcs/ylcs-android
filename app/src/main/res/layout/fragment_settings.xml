<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/micro_gray"
    tools:context=".fragment.FragmentSettings" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_account"
            style="@style/RachelText.X"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/steel_blue"
            android:textStyle="bold"
            android:textSize="@dimen/base"
            android:text="账号设置" />
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="头像"
            android:elevation="3dp"
            app:HasArrow="false" >
            <com.yinlin.rachel.view.AvatarView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/micro_gray" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:elevation="3dp"
            app:HasArrow="false" >
            <TextView
                android:id="@+id/name"
                style="@style/RachelText.X"
                android:gravity="end" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:elevation="3dp"
            app:HasArrow="false" >
            <TextView
                android:id="@+id/signature"
                style="@style/RachelText.X.Overflow"
                android:maxLines="2"
                android:gravity="end" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="背景墙"
            android:elevation="3dp"
            app:HasArrow="false" >
            <com.yinlin.rachel.view.AspectRatioImageView
                android:id="@+id/wall"
                android:layout_width="100dp"
                android:layout_height="0dp"
                app:Ratio="1.777778"
                android:src="@color/micro_gray" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邀请人"
            android:elevation="3dp"
            app:HasArrow="false" >
            <TextView
                android:id="@+id/inviter"
                style="@style/RachelText.X"
                android:gravity="end" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/logoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_red"
            android:text="退出登录"
            android:elevation="3dp" />

        <TextView
            android:id="@+id/tv_theme"
            style="@style/RachelText.X"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/steel_blue"
            android:textStyle="bold"
            android:textSize="@dimen/base"
            android:text="个性化设置" />

        <TextView
            android:id="@+id/tv_msg"
            style="@style/RachelText.X"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/steel_blue"
            android:textStyle="bold"
            android:textSize="@dimen/base"
            android:text="资讯设置" />
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微博 API"
            android:elevation="3dp" />
        <com.yinlin.rachel.view.TagView
            android:id="@+id/weibo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_music"
            style="@style/RachelText.X"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/steel_blue"
            android:textStyle="bold"
            android:textSize="@dimen/base"
            android:text="听歌设置" />
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="禁止音频焦点"
            android:elevation="3dp"
            app:HasArrow="false" >
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_music_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌单云备份"
            android:elevation="3dp"
            app:HasArrow="false" >
            <ImageView
                android:id="@+id/button_upload_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/svg_upload_blue" />
            <ImageView
                android:id="@+id/button_download_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/svg_download_blue" />
        </com.yinlin.rachel.view.SettingsItem>

        <TextView
            android:id="@+id/tv_other"
            style="@style/RachelText.X"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/steel_blue"
            android:textStyle="bold"
            android:textSize="@dimen/base"
            android:text="通用设置" />
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/crash_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="崩溃日志"
            android:elevation="3dp" />
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_settings_update"
            android:text="检查更新"
            android:textColor="@color/orange_red"
            android:elevation="3dp" >
            <TextView
                android:id="@+id/version"
                style="@style/RachelText.X"
                android:gravity="end" />
        </com.yinlin.rachel.view.SettingsItem>
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_settings_feedback"
            android:text="反馈与建议"
            android:elevation="3dp" />
        <com.yinlin.rachel.view.SettingsItem
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_settings_about"
            android:text="关于茶舍"
            android:elevation="3dp" />
    </LinearLayout>
</ScrollView>