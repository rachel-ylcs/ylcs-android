<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:padding="5dp"
    android:background="@color/black" >
    <TextView
        android:id="@+id/description"
        style="@style/RachelText.X0"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="未知类型" />
    <TextView
        android:id="@+id/fs"
        style="@style/RachelText.X0"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintLeft_toRightOf="@id/description"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:text="0B" />
    <TextView
        android:id="@+id/name"
        style="@style/RachelText.X0"
        app:layout_constraintLeft_toRightOf="@id/fs"
        app:layout_constraintRight_toLeftOf="@id/edit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:text=".unknown" />
    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/delete"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        android:src="@drawable/icon_edit_white"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_delete_white"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>