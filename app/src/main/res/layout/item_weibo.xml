<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weibo_card"
    style="@style/RachelCard"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="0dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.yinlin.rachel.view.AvatarView
            android:id="@+id/avatar"
            style="@style/RachelCircleImage"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/time"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/name"
            style="@style/RachelText.X0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            android:textColor="@color/orange_red" />
        <TextView
            android:id="@+id/time"
            style="@style/RachelText"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:textSize="@dimen/xs"
            android:textColor="@color/dark_gray" />
        <TextView
            android:id="@+id/location"
            style="@style/RachelText.X0"
            app:layout_constraintLeft_toRightOf="@id/time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/time"
            android:gravity="end"
            android:layout_marginHorizontal="10dp"
            android:textSize="@dimen/xs"
            android:textColor="@color/dark_gray" />
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/avatar"
            app:layout_constraintLeft_toLeftOf="parent" >
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />
            <com.yinlin.rachel.view.NineGridView
                android:id="@+id/pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:Icon="@drawable/icon_video_play_blue" />
            <LinearLayout
                android:id="@+id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_like" />
                    <TextView
                        android:id="@+id/like"
                        style="@style/RachelText"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="@dimen/xs" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comment" />
                    <TextView
                        android:id="@+id/comment"
                        style="@style/RachelText"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="@dimen/xs" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_repost" />
                    <TextView
                        android:id="@+id/repost"
                        style="@style/RachelText"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="@dimen/xs" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>