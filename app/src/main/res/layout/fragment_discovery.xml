<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/micro_gray"
    tools:context=".fragment.FragmentDiscovery" >
    <com.yinlin.rachel.view.PAGRefreshHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.scwang.smart.refresh.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/micro_gray"
        tools:context=".fragment.FragmentDiscovery">
        <com.xuexiang.xui.widget.searchview.MaterialSearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="5dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp" >
            <com.flyco.tablayout.SegmentTabLayout
                android:id="@+id/tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_add"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="10dp"
                app:tl_tab_space_equal="true"
                app:tl_textsize="@dimen/lg"
                app:tl_textBold="BOTH"
                app:tl_textUnselectColor="@color/steel_blue"
                app:tl_textSelectColor="@color/white"
                app:tl_indicator_corner_radius="10dp"
                app:tl_indicator_color="@color/steel_blue"
                app:tl_indicator_anim_enable="true"
                app:tl_indicator_bounce_enable="false" />
            <ImageView
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toLeftOf="@id/button_search"
                app:layout_constraintTop_toTopOf="@id/tab"
                app:layout_constraintBottom_toBottomOf="@id/tab"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/svg_add_blue" />
            <ImageView
                android:id="@+id/button_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tab"
                app:layout_constraintBottom_toBottomOf="@id/tab"
                android:layout_marginHorizontal="10dp"
                android:padding="2dp"
                android:src="@drawable/svg_search_blue" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.xuexiang.xui.widget.statelayout.StatefulLayout
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:stf_inAnimation="@anim/ps_anim_fade_in"
            app:stf_outAnimation="@anim/ps_anim_fade_out" >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </com.xuexiang.xui.widget.statelayout.StatefulLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>