<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/micro_gray"
    tools:context=".fragment.FragmentMsg" >
    <com.yinlin.rachel.view.PAGRefreshHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.scwang.smart.refresh.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            app:tl_tab_space_equal="true"
            app:tl_textsize="@dimen/lg"
            app:tl_textBold="BOTH"
            app:tl_textUnselectColor="@color/steel_blue"
            app:tl_textSelectColor="@color/white"
            app:tl_indicator_corner_radius="10dp"
            app:tl_indicator_color="@color/steel_blue"
            app:tl_indicator_anim_enable="true"
            app:tl_indicator_bounce_enable="false" />
        <com.xuexiang.xui.widget.statelayout.StatefulLayout
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:stf_inAnimation="@anim/ps_anim_fade_in"
            app:stf_outAnimation="@anim/ps_anim_fade_out" >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </com.xuexiang.xui.widget.statelayout.StatefulLayout>
    </LinearLayout>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>