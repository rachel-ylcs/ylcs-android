<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RachelCard"
    app:cardCornerRadius="0dp"
    android:layout_margin="10dp"
    tools:context=".fragment.FragmentWeiboUser" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/svg_add_blue" />
        <com.yinlin.rachel.view.AvatarView
            android:id="@+id/avatar"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@color/white"
            app:BorderWidth="1dp"
            app:BorderColor="@color/light_gray" />
        <TextView
            android:id="@+id/name"
            style="@style/RachelText.X"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="未知用户"
            android:textSize="@dimen/xl"
            android:textColor="@color/steel_blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/follow"
                style="@style/RachelText.X0"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="关注 12"
                android:textSize="@dimen/base" />
            <TextView
                android:id="@+id/fans"
                style="@style/RachelText.X0"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="粉丝 11"
                android:textSize="@dimen/base" />
        </LinearLayout>
        <TextView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="个性签名"
            android:textSize="@dimen/base" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>