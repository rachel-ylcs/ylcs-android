<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/micro_gray"
    tools:context=".fragment.FragmentLibrary" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center" >
        <TextView
            style="@style/RachelText"
            android:text="曲库"
            android:textColor="@color/steel_blue"
            android:textSize="@dimen/xl"
            android:textStyle="bold" />
        <com.yinlin.rachel.view.ButtonGroup
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|end"
            android:layout_marginStart="10dp"
            app:ButtonGroupIcon1="@drawable/svg_search_blue"
            app:ButtonGroupIcon2="@drawable/svg_refresh_blue"
            app:ButtonGroupIcon3="@drawable/svg_playlist_blue"
            app:ButtonGroupIcon4="@drawable/svg_delete_blue"
            app:ButtonGroupIcon5="@drawable/svg_select_all_blue" />
    </LinearLayout>
    <com.yinlin.rachel.view.LineView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp" />
    <com.gturedi.views.StatefulLayout
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="5dp"
        app:stfInAnimation="@anim/anim_fade_in"
        app:stfOutAnimation="@anim/anim_fade_out" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.gturedi.views.StatefulLayout>
</LinearLayout>