<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.FloatingLyricsView" >
    <androidx.constraintlayout.widget.Placeholder
        android:id="@+id/placeholder1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/surface"
        app:layout_constraintBottom_toBottomOf="@id/surface" />
    <TextView
        android:id="@+id/surface"
        style="@style/RachelText.X0"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toRightOf="@id/placeholder1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="无歌词"
        android:textStyle="bold" />
    <androidx.constraintlayout.widget.Placeholder
        android:id="@+id/placeholder2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/surface"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/surface"
        app:layout_constraintBottom_toBottomOf="@id/surface" />
</androidx.constraintlayout.widget.ConstraintLayout>