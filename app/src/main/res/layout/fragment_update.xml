<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.FragmentUpdate" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/icon" />
        <TextView
            android:id="@+id/app_version"
            style="@style/RachelText"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="x.x.x"
            android:textSize="@dimen/xl"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/target_version"
        style="@style/RachelText.X"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="服务器版本: x.x.x"
        android:textSize="@dimen/lg"
        app:drawableEndCompat="@drawable/svg_settings_update" />
    <TextView
        android:id="@+id/min_version"
        style="@style/RachelText.X"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="最低兼容版本: x.x.x"
        android:textSize="@dimen/lg" />
    <xyz.sangcomz.stickytimelineview.TimeLineRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:sectionBackgroundColor="@color/white"
        app:sectionTitleTextColor="@color/black"
        app:sectionTitleTextSize="@dimen/sm"
        app:timeLineDotRadius="10dp" />
</LinearLayout>