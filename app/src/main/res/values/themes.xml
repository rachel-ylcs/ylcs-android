<resources>
    <style name="Guideline" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Guideline.X" >
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Guideline.Y" >
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Barrier" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RachelBottomDialogWrapper" parent="Widget.Design.BottomSheet.Modal" >
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="Theme.RachelBottomDialog" parent="Theme.Design.BottomSheetDialog" >
        <item name="bottomSheetStyle">@style/RachelBottomDialogWrapper</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="RachelDialog" parent="Theme.AppCompat.Dialog" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="RachelText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType">none</item>
    </style>
    <style name="RachelText.MultiLine" >
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="RachelText.MultiLine.X0" >
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="RachelText.X" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
    <style name="RachelText.X.Overflow" >
        <item name="android:autoSizeTextType">none</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="RachelText.X0" >
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
    <style name="RachelText.X0.Overflow" >
        <item name="android:autoSizeTextType">none</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="RachelText.Image" >
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="RachelCircleImage" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="RachelCard" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="Theme.RachelButton" parent="Widget.Material3.Button" >
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/selector_button_primary</item>
    </style>
    <style name="Theme.RachelSwitch" parent="Widget.AppCompat.CompoundButton.Switch" >
        <item name="android:minHeight">0dp</item>
        <item name="switchPadding">0dp</item>
    </style>
    <style name="RachelScrollView" >
        <item name="android:scrollbars">none</item>
    </style>
    <style name="Theme.Rachel" parent="Theme.Material3.Light.NoActionBar" >
        <item name="android:scrollbars">none</item>
        <item name="android:textSize">@dimen/sm</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/xwwk</item>
        <item name="android:autoSizeMinTextSize">4sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="fontFamily">@font/xwwk</item>
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryDark">@color/steel_blue_pressed</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <item name="colorAccent">@color/steel_blue</item>
        <item name="materialButtonStyle">@style/Theme.RachelButton</item>
        <item name="android:scrollViewStyle">@style/RachelScrollView</item>
        <item name="switchStyle">@style/Theme.RachelSwitch</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout</item>
    </style>
</resources>